        <?php unset($avg_row_length_value, $avg_row_length_unit); ?>
    <?php endif; ?>

    <?php if (!$is_innodb
            && isset($showtable['Data_length'])
            && isset($showtable['Rows'])
            && $showtable['Rows'] > 0
            && $mergetable == false): ?>
        <tr class="<?= (($odd_row = !$odd_row) ? 'odd' : 'even'); ?>">
        <th class="name"><?= __('Row size'); ?></th>
