            = PMA\libraries\Util::formatByteDown($showtable['Avg_row_length'], 6, 1); ?>
        <tr class="<?= (($odd_row = !$odd_row) ? 'odd' : 'even'); ?>">
        <th class="name"><?= __('Row length'); ?></th>
        <td class="value"><?= $avg_row_length_value , ' ' , $avg_row_length_unit; ?></td>
